<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Toggle Sensors"
        android:key="pref_key_storage_settings">

    <SwitchPreference
        android:key="switchWifi"
        android:title="Wifi"
        android:defaultValue="true"/>
    <SwitchPreference
        android:key="switchVisual"
        android:title="Visual"
        android:defaultValue="true"/>
    <SwitchPreference
        android:key="switchGyroscope"
        android:title="Gyroscope"
        android:defaultValue="true"/>
    <SwitchPreference
        android:key="switchMagnetic"
        android:title="Magnetic"
        android:defaultValue="true"/>
    <SwitchPreference
        android:key="switchAccelerometer"
        android:title="Accelerometer"
        android:defaultValue="true"/>
    <SwitchPreference
        android:key="switchOrientation"
        android:title="Orientation"
        android:defaultValue="true"/>
    <SwitchPreference
        android:key="switchGravity"
        android:title="Gravity"
        android:defaultValue="true"/>
    <SwitchPreference
        android:key="switchGPS"
        android:title="GPS"
        android:defaultValue="true"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Poll Rate (ms)"
        android:key="pref_key_storage_settings">

        <SeekBarPreference
            android:defaultValue="20000"
            android:title="Sensor Poll Rate"
            android:key="sensorRate"
            android:max="100000">
        </SeekBarPreference>
        <SeekBarPreference
            android:defaultValue="10000"
            android:title="GPS Poll Rate"
            android:key="gpsRate"
            android:max="100000">
        </SeekBarPreference>

    </PreferenceCategory>
</PreferenceScreen>