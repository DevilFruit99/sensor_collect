<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/abc_popup_background_mtrl_mult">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/abc_search_url_text_normal" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/textView"
        android:windowSoftInputMode="stateAlwaysHidden"
        android:layout_marginTop="34dp" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Record"
        android:checked="false"
        android:clickable="true"
        android:textColor="#FF0000"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:id="@+id/switchWifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wifi"
        android:checked="true"
        android:clickable="true"
        android:textColor="#AAAAAA"
        android:enabled="true"
        android:layout_below="@+id/switchGPS"
        android:layout_alignRight="@+id/switchGPS"
        android:layout_alignEnd="@+id/switchGPS" />

    <Switch
        android:id="@+id/switchVisual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visual"
        android:checked="true"
        android:clickable="true"
        android:textColor="#AAAAAA"
        android:enabled="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/switchWifi" />

    <Switch
        android:id="@+id/switchGyroscope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gyroscope"
        android:checked="true"
        android:clickable="true"
        android:textColor="#AAAAAA"
        android:enabled="true"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/switchVisual" />

    <Switch
        android:id="@+id/switchMagnetic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Magnetic"
        android:checked="true"
        android:clickable="true"
        android:textColor="#AAAAAA"
        android:enabled="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/switchGyroscope" />

    <Switch
        android:id="@+id/switchAccelerometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accelerometer"
        android:checked="true"
        android:clickable="true"
        android:textColor="#AAAAAA"
        android:enabled="true"
        android:layout_below="@+id/switchMagnetic"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true" />

    <Switch
        android:id="@+id/switchOrientation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orientation"
        android:checked="true"
        android:clickable="true"
        android:textColor="#AAAAAA"
        android:enabled="true"
        android:layout_below="@+id/switchAccelerometer"
        android:layout_alignParentRight="true" />

    <Switch
        android:id="@+id/switchGravity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gravity"
        android:checked="true"
        android:clickable="true"
        android:textColor="#AAAAAA"
        android:enabled="true"
        android:layout_below="@+id/switchOrientation"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pulse"
        android:layout_alignTop="@+id/button2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera"
        android:layout_marginBottom="67dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video"
        android:layout_alignTop="@+id/button2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:textColor="@color/abc_search_url_text_normal"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="# of picture taken: 0"
        android:id="@+id/textPictureCount"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPS"
        android:id="@+id/switchGPS"
        android:checked="true"
        android:clickable="true"
        android:layout_below="@+id/switch1"
        android:layout_alignRight="@+id/switchMagnetic"
        android:layout_alignEnd="@+id/switchMagnetic"
        android:layout_marginTop="29dp" />

</RelativeLayout>
